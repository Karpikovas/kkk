{% extends 'base.html.twig' %}

{% block styles %}
    <link href="css/new.css" rel="stylesheet">
{% endblock %}

{% block header %}

{% endblock %}



{% block body %}
    <div class="container text-dark">
        <div class="row h-100 justify-content-center align-items-center">

            <form class="main-form">
                <div class="form-group">
                    <label for="name" class="col-form-label">Название:</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>
                <div class="form-group">
                    <label for="comment-text" class="col-form-label">Комментарий:</label>
                    <textarea class="form-control" id="comment-text" name="comment"></textarea>
                </div>


                <div class="form-group">
                    Выбор тэгов
                </div>

                <div class="input-group input-group-sm">
                    <select class="form-control" data-select-type="tags-list">
                        <option selected>Все</option>
                    </select>
                </div>

                <div class="form-group text-center" data-tags-list-type="all"></div>

                <div class="form-group text-left mb-3" data-tags-list-type="selected">
                    Выбранные тэги:
                </div>


                <div class="form-group text-right mb-3">
                    <button type="button" class="btn btn-primary" data-btn-type="save">Сохранить</button>
                </div>
            </form>
        </div>
    </div>


{% endblock %}


{% block scripts %}
    <script src="js/new.js"></script>
{% endblock %}



